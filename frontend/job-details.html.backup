<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Details | FlexJobs</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
   
    <!-- Custom CSS -->
    <link href="css/style.css" rel="stylesheet">
    <link href="components/main-footer/main-footer.css" rel="stylesheet">
    <link href="components/main-header/main-header.css" rel="stylesheet">

    <style>
        .job-details-page {
            background: white;
            min-height: 100vh;
            padding-top: 2rem;
        }
        
        .job-hero {
            background: white;
            border-radius: 15px;
            padding: 3rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .company-logo img {
            width: 80px;
            height: 80px;
            object-fit: contain;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 8px;
            background: white;
        }
        
        .job-meta .badge {
            background: #004f6e !important;
            color: white;
            padding: 8px 12px;
            font-size: 0.85rem;
        }
        
        .salary-highlight {
            background: white;
            color: #004f6e;
            padding: 1.5rem;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }
        
        .salary-highlight h3 {
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        
        .apply-section {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border: 2px solid #e9ecef;
        }
        
        .apply-btn {
            background: #ff4400;
            color: white;
            padding: 15px 40px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
            display: inline-block;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        }
        
        .apply-btn:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
        }
        
        .content-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .content-card h3 {
            color: #495057;
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid #e9ecef;
            font-weight: 600;
        }
        
        .content-card .fas {
            margin-right: 8px;
        }
        
        .job-info-grid {
            display: grid;
            gap: 1rem;
        }
        
        .info-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 10px;
            border-left: 4px solid #667eea;
        }
        
        .info-item i {
            font-size: 1.25rem;
            color: #667eea;
            margin-right: 1rem;
            width: 24px;
            text-align: center;
        }
        
        .info-item .value {
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.25rem;
        }
        
        .info-item .label {
            font-size: 0.85rem;
            color: #6c757d;
        }
        
        .company-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
        }
        
        .company-card .company-logo {
            display: inline-block;
            margin-bottom: 1rem;
        }
        
        .company-card .company-logo img {
            width: 60px;
            height: 60px;
            object-fit: contain;
        }
        
        .loading-container {
            min-height: 60vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .error-container {
            min-height: 60vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        @media (max-width: 768px) {
            .job-hero {
                padding: 2rem 1.5rem;
            }
            
            .job-hero .d-flex {
                flex-direction: column;
                text-align: center;
            }
            
            .company-logo {
                margin-bottom: 1rem !important;
            }
            
            .salary-highlight {
                margin-top: 2rem;
            }
        }
    </style>
</head>

<body class="job-details-page">
    <!-- Main Header Component will be injected here -->
    <div id="main-header-container"></div>
    
    <!-- Loading State -->
    <div id="loadingState" class="loading-container">
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <h4>Loading Job Details...</h4>
            <p class="text-muted">Please wait while we fetch the job information</p>
        </div>
    </div>

    <!-- Error State -->
    <div id="errorState" class="error-container" style="display: none;">
        <div class="text-center">
            <i class="fas fa-exclamation-triangle fa-4x text-warning mb-3"></i>
            <h3>Job Not Found</h3>
            <p class="text-muted mb-4">The job you're looking for doesn't exist or has been removed.</p>
            <a href="browse-jobs.html" class="btn btn-primary btn-lg">
                <i class="fas fa-search me-2"></i>Browse All Jobs
            </a>
        </div>
    </div>

    <!-- Job Details Content -->
    <div id="jobDetailsContent" style="display: none;">
        
        <!-- Job Hero Section -->
        <section class="job-hero">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <div class="d-flex align-items-start">
                            <div class="company-logo me-4">
                                <img id="companyLogo" src="images/logo.png" alt="Company Logo">
                            </div>
                            <div>
                                <h1 id="jobTitle" class="display-5 fw-bold mb-2">Job Title</h1>
                                <h4 id="companyName" class="mb-3 opacity-75">Company Name</h4>
                                <div class="job-meta">
                                    <span class="badge bg-primary me-2" id="jobLocation">
                                        <i class="fas fa-map-marker-alt me-1"></i>Location
                                    </span>
                                    <span class="badge bg-primary me-2" id="jobType">
                                        <i class="fas fa-briefcase me-1"></i>Job Type
                                    </span>
                                    <span class="badge bg-primary me-2" id="remoteType">
                                        <i class="fas fa-laptop me-1"></i>Remote
                                    </span>
                                    <span class="badge bg-primary" id="postedDate">
                                        <i class="fas fa-clock me-1"></i>Posted Date
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-end">
                        <div id="salaryDisplay" class="salary-highlight">
                            <h3 class="mb-1" id="salaryRange">$XX,XXX - $XX,XXX</h3>
                            <small>per year</small>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="container pb-5">
            
            <!-- Apply Section -->
            <div class="apply-section">
                <h3 class="mb-3">Ready to Apply?</h3>
                <p class="mb-4 opacity-75">Click the button below to apply for this position</p>
                <a href="#" id="applyBtn" class="apply-btn" target="_blank" rel="noopener noreferrer">
                    <i class="fas fa-external-link-alt me-2"></i>Apply Now
                </a>
            </div>

            <div class="row">
                <!-- Main Content -->
                <div class="col-lg-8">
                    
                    <!-- Job Description -->
                    <div class="content-card">
                        <h3><i class="fas fa-file-alt text-primary"></i>Job Description</h3>
                        <div id="jobDescription">
                            <p>Job description will be loaded here...</p>
                        </div>
                    </div>

                    <!-- Requirements -->
                    <div class="content-card">
                        <h3><i class="fas fa-check-circle text-success"></i>Requirements</h3>
                        <div id="jobRequirements">
                            <p>Job requirements will be loaded here...</p>
                        </div>
                    </div>

                    <!-- Benefits -->
                    <div class="content-card" id="benefitsSection" style="display: none;">
                        <h3><i class="fas fa-gift text-warning"></i>Benefits</h3>
                        <div id="jobBenefits">
                            <p>Job benefits will be loaded here...</p>
                        </div>
                    </div>

                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    
                    <!-- Job Information -->
                    <div class="content-card">
                        <h3><i class="fas fa-info-circle text-info"></i>Job Information</h3>
                        <div class="job-info-grid">
                            <div class="info-item">
                                <i class="fas fa-chart-line"></i>
                                <div>
                                    <div class="value" id="experienceLevel">Mid Level</div>
                                    <div class="label">Experience</div>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-calendar-alt"></i>
                                <div>
                                    <div class="value" id="employmentType">Full-time</div>
                                    <div class="label">Type</div>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-home"></i>
                                <div>
                                    <div class="value" id="workStyle">Remote</div>
                                    <div class="label">Work Style</div>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-tag"></i>
                                <div>
                                    <div class="value" id="jobCategory">Technology</div>
                                    <div class="label">Category</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Company Information -->
                    <div class="company-card">
                        <div class="company-logo">
                            <img id="sidebarCompanyLogo" src="images/logo.png" alt="Company Logo">
                        </div>
                        <h4 id="sidebarCompanyName" class="mb-2">Company Name</h4>
                        <p id="companySize" class="mb-3 opacity-75">Company Size</p>
                        <p id="companyDescription" class="mb-3 opacity-75">Company description will be loaded here...</p>
                        <a href="#" id="viewCompanyWebsite" class="btn btn-light" target="_blank" rel="noopener noreferrer">
                            <i class="fas fa-external-link-alt me-2"></i>Visit Website
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div id="footer-container"></div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>        
        // Simple component loader for header and footer
        async function loadSimpleComponents() {
            try {
                // Load header
                const headerResponse = await fetch('components/main-header/main-header.html');
                if (headerResponse.ok) {
                    const headerHTML = await headerResponse.text();
                    const headerContainer = document.getElementById('main-header-container');
                    if (headerContainer) {
                        headerContainer.innerHTML = headerHTML;
                    }
                }
                
                // Load footer
                const footerResponse = await fetch('components/main-footer/main-footer.html');
                if (footerResponse.ok) {
                    const footerHTML = await footerResponse.text();
                    const footerContainer = document.getElementById('footer-container');
                    if (footerContainer) {
                        footerContainer.innerHTML = footerHTML;
                    }
                }
            } catch (error) {
                console.log('Component loading failed:', error);
            }
        }
        
        // Load components on page load
        document.addEventListener('DOMContentLoaded', async () => {
            console.log('ðŸš€ Initializing job details page');
            loadSimpleComponents();
            // The job-details.js script will handle the job loading
        });
    </script>
    <script src="js/job-details.js"></script>
</body>
</html>